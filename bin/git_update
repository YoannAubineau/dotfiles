#!/usr/bin/env bash

LINE='------------------------------'

PATHS=$*
[ $# -eq 0 ] && PATHS=.

for path in $PATHS
do
	# ignore non-git directories
	[ ! -d $path/.git ] && continue

	# draw a line in between repositories
	[ $# -gt 1 ] && echo  "$LINE $path"

	cd $path
	set -o verbose
	git remote update
	git remote prune origin
	git branch -a
	git status
	git stash list
	cd -
done

