# Bash aliases

alias l='ls -CF'
alias ll='ls -lh'
alias la='ls -A'
alias lla='ls -lhA'
alias sl='ls'

alias df='df -h'

alias lns='ln -s'

alias susu='sudo su -'

alias nl='nl -ba'

alias cgrep='grep -n --color=always'
alias cless='less -R'

alias diff='colordiff'

alias NOW='date +%Y%m%d_%H%M%S'
alias TODAY='date +%Y%m%d'

alias sum='python -c "import sys; print sum(int(l) for l in sys.stdin)"'

